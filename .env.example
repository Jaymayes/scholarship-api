# Environment Configuration
# Set to 'development' for local development, 'production' for live deployment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=true

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# Production: Comma-separated list of allowed origins (REQUIRED in production)
# Development: Leave empty to allow all origins, or specify custom origins
CORS_ALLOWED_ORIGINS=
# Example for production:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_BACKEND_URL=redis://localhost:6379/0
# Set to 0 to use environment defaults (production: 100/min, development: 200/min)
RATE_LIMIT_PER_MINUTE=0

# Request/Response Limits
# Maximum request body size in bytes (default: 1 MiB = 1048576 bytes)
MAX_REQUEST_SIZE_BYTES=1048576
# Maximum URL length in characters (default: 2048)
MAX_URL_LENGTH=2048

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Headers (Production)
ENABLE_HSTS=false
HSTS_MAX_AGE=63072000
HSTS_INCLUDE_SUBDOMAINS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Analytics and Features
ANALYTICS_ENABLED=true
FEATURE_RECOMMENDATIONS=true
FEATURE_ANALYTICS=true
FEATURE_BULK_OPERATIONS=true

# OpenAI Integration (Optional)
# OPENAI_API_KEY=your-openai-api-key-here

# Monitoring and Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
# TRACING_ENDPOINT=http://your-otel-collector:4317

# External Services (Optional)
# NOTIFICATION_SERVICE_URL=https://your-notification-service.com
# EMAIL_SERVICE_API_KEY=your-email-service-api-key