# Development Environment Configuration
# Safe defaults for local development

# Environment
ENVIRONMENT=development
STRICT_CONFIG_VALIDATION=false
DEBUG=true

# API Configuration
API_TITLE="Scholarship Discovery & Search API (Development)"
HOST=0.0.0.0
PORT=5000

# JWT Security (auto-generated in development)
# JWT_SECRET_KEY=your-development-jwt-secret-key

# Database (PostgreSQL preferred, SQLite fallback)
DATABASE_URL=postgresql://user:password@localhost:5432/scholarship_dev
# DATABASE_URL=sqlite:///dev.db

# CORS (permissive for development)
CORS_ALLOWED_ORIGINS=*
CORS_ALLOW_CREDENTIALS=false

# Rate Limiting (lenient for development)
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://localhost:6379
RATE_LIMIT_PER_MINUTE=1000

# Features
PUBLIC_READ_ENDPOINTS=true
ENABLE_DOCS=true
ENABLE_HSTS=false

# Logging
LOG_LEVEL=DEBUG

# OpenAI (optional for AI features)
# OPENAI_API_KEY=your-openai-api-key