modules = ["python-3.11", "python3", "postgresql-16"]
[agent]
expertMode = true
integrations = ["stripe:2.0.0"]

[nix]
channel = "stable-25_05"
packages = ["bc", "cairo", "cargo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "jq", "libiconv", "libxcrypt", "libyaml", "pkg-config", "postgresql", "qhull", "rustc", "tcl", "tk"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "--worker-class=uvicorn.workers.UvicornWorker", "--timeout=120", "--keep-alive=5", "main:app"]
build = ["pip", "install", "-r", "requirements.txt"]

